<body>
<nav>
    <ul>
        <li><a class="headerItem" href="/user/homePage">Home</a></li>
        <li><a class="headerItem" href="/user/payment">My Purchases</a></li>
        <li><a class="headerItem" href="/user/favorite">Favorites</a></li>
        <li><a class="headerItem" href="/user/cart">Cart</a></li>
        <li class="dropdown">
            <a href="#" class="dropbtn">Categories</a>
            <div class="dropdown-content" id="categoryDropdown">
                <% categories.forEach(category => { %>
                    <a class="headerItem" href="/user/category/<%= category.category_id %>"><%= category.category_name %></a>
                <% }); %>
            </div>
        </li>
        <li><a href="/auth/logout" class="headerItem">Logout</a></li>
    </ul>
</nav>
<div class="container">
    <img src="/uploads/static/<%= clothing.image_url %>" alt="<%= clothing.title %>">
    <div class="details">
        <h2><%= clothing.title %></h2>
        <p>Description: <%= clothing.description %></p>
        <p>Price: $<%= parseFloat(clothing.price).toFixed(2) %></p>
        <div class="buttons">
            <button class="button_add" onclick="addToCart(<%= clothing.clothing_id %>)">
                <svg class = "cart" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" fill="white"></path>
                </svg>
            </button>

            <button class="heart-button" onclick="addToFavorite(<%= clothing.clothing_id %>)">
                <svg id="heart-<%= clothing.clothing_id %>" class="heart" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 21.35L10.55 20.03C5.4 15.36 2 12.27 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.77-3.4 6.86-8.55 11.55L12 21.35z"/>
                </svg>
            </button>

        </div>
    </div>
</div>
</body>
<script>
    function addToCart(itemId) {
        fetch('/user/cart/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                itemId: itemId,
            })
        })
            .then(response => {
                if (response.ok) {

                } else {
                    alert('Failed to add item to cart. Please try again later.');
                }
            })
            .catch(error => {
                console.error('Error adding item to cart:', error);
                alert('An error occurred while adding the item to cart. Please try again later.');
            });
    }

    function addToFavorite(itemId) {
        fetch('/user/favorite/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                itemId: itemId,
            })
        })
            .then(response => {
                if (response.ok) {
                    // Если элемент успешно добавлен в избранное, добавить класс heart-red к сердечку
                    document.getElementById('heart-' + itemId).classList.add('heart-red');
                }
            })
            .catch(error => {
                console.error('Error adding item to favorite:', error);
                alert('An error occurred while adding the item to favorite. Please try again later.');
            });
    }
</script>
</html>
